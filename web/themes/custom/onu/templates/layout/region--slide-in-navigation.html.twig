{#
/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region <div>.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 */
#}
{% set classes = [
    'region',
    'region-' ~ region|clean_class,
] %}
{% if content %}
    <div class="the-menu" style="margin-top: 128px; display: none;">
        <div class="the-menu__outer">
            {{ searchform }}
            <div class="the-menu__inner">
                <h3 class="the-menu__heading heading-style-7 text-orange">Information for:</h3>
                {{ content }}
            </div>
        </div>
        <div class="the-menu__gradient"></div>
    </div>
{% endif %}
